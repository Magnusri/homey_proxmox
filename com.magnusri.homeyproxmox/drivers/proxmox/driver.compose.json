{
  "name": {
    "en": "Proxmox"
  },
  "class": "service",
  "capabilities": [
    "onoff",
    "measure_cpu",
    "measure_memory",
    "measure_disk",
    "sensor_uptime",
    "measure_network_in",
    "measure_network_out",
    "measure_disk_read",
    "measure_disk_write",
    "alarm_connectivity",
    "alarm_generic",
    "alarm_heat"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "pair": [
    {
      "id": "login"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": { "next": "add_devices" }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  }
}